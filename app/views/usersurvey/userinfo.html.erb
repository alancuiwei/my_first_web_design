<%= stylesheet_link_tag "usersurvey.css" %>

<div class="main-content">
  <a href="/">首页</a><br><br>
  <table class="table table-striped table-bordered">
    <tr>
      <td style="width: 15%;">用户名</td>
      <td style="width: 35%;"><%= @webuser.username %></td>
      <td style="width: 15%;">联系电话</td>
      <td style="width: 35%;"><%= @webuser.tel %></td>
    </tr>
    <tr>
      <td>姓名</td>
      <td><% if @person!=1 %><%= @personalfinance.name %><% end %></td>
      <td>电子邮箱</td>
      <td><%= @webuser.email %></td>
    </tr>
    <tr>
      <td>风险承受度</td>
      <td><%= @webuser.risktolerance %></td>
      <td>投资资金</td>
      <td><% if @person!=1 %><%= @personalfinance.investamount %><% end %></td>
    </tr>
    <tr>
      <td>投资周期</td>
      <td><% if @person!=1 %><%= @personalfinance.investcycle %><% end %></td>
      <td>预期年化收益率</td>
      <td><% if @person!=1 %><%= @personalfinance.returnrate %><% end %></td>
    </tr>
    <tr>
      <td>年龄</td>
      <td><% if @person!=1 %><%= @personalfinance.age %><% end %></td>
      <td>可承担的风险</td>
      <td><% if @person!=1 %><%= @personalfinance.riskrate %><% end %></td>
    </tr>
    <tr>
      <td>感兴趣的产品</td>
      <td><% if @person!=1 %><%= @personalfinance.wbreedinfo %><% end %></td>
      <td>所在行业</td>
      <td><% if @person!=1 %><%= @personalfinance.trade %><% end %></td>
    </tr>
  </table>
</div>