        $("#rank1").attr("value",'<%= @financial.rank1 %>');
        $("#rank2").attr("value",'<%= @financial.rank2 %>');
        <% if @financial.rate!=nil %>
        $("#rate").attr("value",'<%= format("%0.3f",@financial.rate.to_f*100) %>');
        <% end %>
        <% if @financial.rate1!=nil %>
        $("#rate1").attr("value",'<%= format("%0.3f",@financial.rate1.to_f*100) %>');
        <% end %>
        <% if @financial.rate2!=nil %>
        $("#rate2").attr("value",'<%= format("%0.3f",@financial.rate2.to_f*100) %>');
        <% end %>
        $("#startvalue").attr("value",'<%= @financial.startvalue%>');
        $("#link").attr("value",'<%= @financial.link%>');
        $("#investperiod").attr("value",'<%= @financial.investperiod%>');
        $("#poundage").attr("value",'<%= @financial.poundage%>');
        $("#productcode").attr("value",'<%= @financial.productcode%>');
        $("#category").attr("value",'<%= @financial.category%>');
        select()
        $("#classify").attr("value",'<%= @financial.classify%>');
        select()
        <% if @financial.classify=='货币基金'%>
         $("#property").attr("value",'<%= @financial.property %>');
         $("#bound").attr("value",'<%= @financial.bound %>');
         pro();
         if('<%= @financial.way %>'.indexOf("iphone")>=0) {
            document.getElementById("iphone").checked = true;
         }
         if('<%= @financial.way %>'.indexOf("android")>=0) {
