<%= javascript_include_tag "jquery.dataTables.min.js" %>
<%= stylesheet_link_tag "datatables.css" %>
<%= stylesheet_link_tag "myaccount.css" %>

<div class="main-content" style="margin-top: 50px;">
 <%= %>
  <div class="main-body">
    <div class="content">
      <div class="fthb faded">

        <table class="body-container" cellspacing="0" cellpadding="0" border="0">

          <!-- tr head-->
          <tr><td>
            <table width="100%" class="body-header" cellspacing="0" cellpadding="0">
              <tr><td>
                <div class="crumbs">
                  <a href="/">首页</a>&nbsp; >&nbsp;
                  <a href="/admin/" >admin管理页面</a>
                </div>
              </td></tr>
            </table>
          </td>
          </tr>

          <!-- tr body-content-->
          <tr>
            <!-- td body-content-->
            <td class="body-content">
              <div class="body-content-wrapper">
                <div class="page-interaction">

                  <!-- div2-->
                  <div>
                    <!-- main table-->
                    <table class="block">
                      <tr>
                        <td>
                          <h2>用户管理</h2><br>
<a href="/admin/userconfig/0">新建用户</a>
  <table cellpadding="0" cellspacing="0" border="0" class="display" id="users">
    <thead><tr>
      <th>用户名</th><th>密码</th>
      <th>联系电话</th><th>通信地址</th>
      <th>利息返还周期</th><th>年化收益率</th>
      <th>修改</th><th>删除</th><th>投资信息</th>
    </tr></thead>
    <tbody>
     <% @webusers.each do |w|  %>
       <tr>
         <td><%= w.username%></td>
         <td><%= @hash_password[w.id]%></td>
         <td><%= w.tel%></td>
         <td><%= w.address%></td>
         <td><%= w.period%></td>
         <td><%= w.returnrate%></td>
         <td><a href="/admin/userconfig/<%= w.id %>">修改</a></td>
         <td><a href="javascript:void(0)" onclick="if(confirm('确认要删除？'))deleteajax('<%= w.id %>','userdeleteajax')">删除</a></td>
         <td><a href="/myaccount/investrecord/<%= w.id %>">查看</a></td>
       </tr>
    <% end %>
    </tbody>
  </table>
  <br> <br>
                        </td>
                      </tr>

                      <tr>
                        <td>
                          <h2>本金管理</h2><br>

                          <a href="/admin/fundconfig/0">添加本金</a>
                          <table cellpadding="0" cellspacing="0" border="0" class="display" id="funds">
                            <thead><tr>
                              <th>用户名</th><th>投资产品</th><th>本金存入日期</th>
                              <th>本金金额</th>
                              <th>修改</th><th>删除</th><th>查看</th>
                            </tr></thead>
                            <tbody>
                            <% @investfunds.each do |i|  %>
                                <tr>
                                  <td><%= i.username%></td>
                                  <td><%= i.pname%></td>
                                <td><%= i.date.to_s(:stamp)%></td>
                                  <td><%= i.recordvalue%></td>
                                  <td><a href="/admin/fundconfig/<%= i.id %>">修改</a></td>
                                  <td><a href="javascript:void(0)" onclick="if(confirm('确认要删除？'))deleteajax('<%= i.id %>','funddeleteajax')">删除</a></td>
                                <td><a href="/myaccount/investrecord/<%= Webuser.find_by_username(i.username).id%>">查看</a></td>
                                </tr>
                            <% end %>
                            </tbody>
                          </table>

                        </td>
                      </tr>


                      <tr>
                        <td>
                          <h2>利息管理</h2><br>
                          <h3>下一次提取利息时间：</h3>
                          <table cellpadding="0" cellspacing="0" border="0" class="display" id="interests_r">
                            <thead><tr>
                              <th>用户名</th><th>返还批次</th><th>返还利息日期</th>
                              <th>返还利息金额</th>
                            </tr></thead>
                            <tbody>
                            <% @webusers.each do |w|  %>
                                <% for j in 0..@hash_interests[w.username][0].keys.size-1 %>
                                <tr>
                                  <td><%= w.username%></td>
                                  <td><%= @hash_interests[w.username][0][@hash_interests[w.username][0].keys[j]][0] %></td>
                                  <td><%= @hash_interests[w.username][0].keys[j]%></td>
                                  <td><%= @hash_interests[w.username][0][@hash_interests[w.username][0].keys[j]][1]%></td>
                                </tr>
                                  <% end %>
                            <% end %>
                            <% for i in 0..@adminremind.keys.size-1 %>
                                <tr>
                                  <td>admin</td>
                                  <td>admin</td>
                                  <td><%= @adminremind.keys[i]%></td>
                                  <td><%= @adminremind[@adminremind.keys[i]]%></td>
                                </tr>
                            <% end %>
                            </tbody>
                          </table>

                          <br><h3>还没有确认支付的利息：</h3>
                          <table cellpadding="0" cellspacing="0" border="0" class="display" id="interests_c">
                            <thead><tr>
                              <th>用户名</th><th>返还产品</th><th>返还批次</th><th>返还利息日期</th>
                              <th>返还利息金额</th><th>确认</th>
                            </tr></thead>
                            <tbody>
                            <% @webusers.each do |w|  %>
                                <% for j in 0..@hash_interests[w.username][1].keys.size-1 %>
                                    <tr>
                                      <td><%= w.username%></td>
                                      <td><%= @hash_interests[w.username][1][@hash_interests[w.username][1].keys[j]][3] %></td>
                                      <td><%= @hash_interests[w.username][1][@hash_interests[w.username][1].keys[j]][0] %></td>
                                      <td><%= @hash_interests[w.username][1][@hash_interests[w.username][1].keys[j]][2] %></td>
                                      <td><%= @hash_interests[w.username][1][@hash_interests[w.username][1].keys[j]][1]%></td>
                                      <td><a href="javascript:void(0)" onclick="if(confirm('确认已经支付？'))interestconfirm('<%=w.username%>','<%= @hash_interests[w.username][1].keys[j]%>','<%= @hash_interests[w.username][1][@hash_interests[w.username][1].keys[j]][1] %>','<%= @hash_interests[w.username][1][@hash_interests[w.username][1].keys[j]][0] %>')">确认</a></td>
                                    </tr>
                                <% end %>
                            <% end %>
                            <% for i in 0..@adminconfirm.keys.size-1 %>
                                <tr>
                                  <td>admin</td>
                                  <td><%= @adminconfirm[@adminconfirm.keys[i]][0]%></td>
                                  <td>0</td>
                                  <td><%= @adminconfirm[@adminconfirm.keys[i]][1]%></td>
                                  <td><%= @adminconfirm[@adminconfirm.keys[i]][2]%></td>
                                  <td><a href="javascript:void(0)" onclick="if(confirm('确认已经支付？'))interestconfirm('admin','<%= @adminconfirm.keys[i]%>','<%= @adminconfirm[@adminconfirm.keys[i]]%>',0)">确认</a></td>
                                </tr>
                            <% end %>
                            </tbody>
                          </table>

                        </td>
                      </tr>

                      <tr>
                        <td>
                          <h2>产品管理</h2><br>
                          <h3>产品基本信息</h3>
                          <a href="/admin/productconfig/0?optype=edit">添加产品</a>
                          <table cellpadding="0" cellspacing="0" border="0" class="display" id="products">
                            <thead><tr>
                              <th>产品名称</th><th>成立日期</th><th>分红方式</th>
                              <th>分红值</th><th>分红周期</th><th>承受风险</th>
                              <th>修改</th><th>删除</th><th>查看</th>
                            </tr></thead>
                            <tbody>
                            <% @products.each do |p|  %>
                                <tr>
                                  <td><%= p.pname%></td>
                                  <td><%= p.founddate%></td>
                                  <td><%= p.dividendtype%></td>
                                  <td><%= p.dividendvalue%></td>
                                  <td><%= p.period%></td>
                                  <td><%= p.riskvalue%></td>
                                  <td><a href="/admin/productconfig/<%= p.id %>?optype=edit">修改</a></td>
                                  <td><a href="javascript:void(0)" onclick="if(confirm('确认要删除？'))deleteajax('<%= p.id %>','productdeleteajax')">删除</a></td>
                                  <td><a href="/products/index/<%= p.id %>?optype=edit">查看</a></td>
                                </tr>
                            <% end %>
                            </tbody>
                          </table>
                          <h3>产品净值更新表</h3>

  <table cellpadding="0" cellspacing="0" border="0" class="display" id="productsupdate">
    <thead><tr>
      <th>产品名称</th><th>上日结存</th>
      <th>当日盈亏</th><th>更新日期</th>
      <th>更新</th><th>查看全部记录</th>
    </tr></thead>
    <tbody>
    <% @products.each do |p|  %>
        <tr>
          <td><%= p.pname%></td>
          <td><%= p.lastprofits%></td>
          <td><%= p.todayprofit%></td>
          <td><%= p.date%></td>
          <td><a href="/admin/productconfig/<%= p.id %>?optype=update">添加/更新</a></td>
          <td> <a href="/admin/productrecords/<%= p.id %>">查看所有</a></td>
        </tr>
    <% end %>
    </tbody>
  </table>
                        </td>
                      </tr>

                      <tr><td>

                      </td></tr>

                    </table>
                  </div>
                </div>

              </div>
            </td>
          </tr>

        </table>
      </div>
    </div>
  </div>
</div>

<script>
    $(document).ready(function(){
        $('#users,#products,#funds,#interests_r,#interests_c,#productsupdate').dataTable();
    });
    function deleteajax(id,type){
        $.get("/admin/"+type+"/"+id,function(data){
            if(data=="s"){
                alert("删除成功！");
                location.reload();
            }
            else{
                alert("删除失败！");
                location.reload();
            }
        });
    }

    function interestconfirm(name,date,value,ordernum){
        $.get("/admin/interestconfirm",{username:name,date:date,recordvalue:value,ordernum:ordernum},function(data){
            if(data=="s"){
                alert("确认成功！");
                location.reload();
            }
            else if(data=="f"){
                alert("确认失败！");
                location.reload();
            }

        })
    }
</script>