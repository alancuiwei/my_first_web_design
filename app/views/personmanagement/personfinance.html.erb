<%= stylesheet_link_tag "personmanagement.css" %>

<div class="main-content">
  <h1>投资页面</h1>
  <% if session[:webusername]!=nil && @personalfinance%>
      <h2>个人信息：</h2>
      <div class="row-fluid">
        <div class="span2">
          <p>用户名：<%= @personalfinance.username%></p>
        </div>
        <div class="span2">
          <p>公司行业：<%= @personalfinance.company%></p>
        </div>
        <div class="span2">
          <p>年龄：<%= @personalfinance.age%></p>
        </div>
      </div>
      <br>
      <h2>个人投资信息：</h2>
      <p>总资金：<%= @personalfinance.investamount%>元<span style="float: right;"><a href="/personmanagement/personinformation/0">添加</a></span></p>
      <table class="table table-striped table-bordered" id="info">
        <thead><tr>
          <th>产品种类</th><th>百分比</th><th>总金额</th>
          <th>已购产品</th><th>到期日期</th><th>操作</th>
        </tr></thead>

        <% @personalinfo.each do |b| %>
            <tr>
              <td><%= b.producttype%></td>
              <td><%= format("%0.1f",b.percentage*100)%>%</td>
              <td><%= b.investamount%></td>
              <td><%= b.purchasproducts%></td>
              <td><%= b.collectperiod%></td>
              <td><a href="/personmanagement/personinformation/<%= b.id %>">修改</a></td>
            </tr>
        <% end %>
      </table>
    <!--  <h2>个人资产配置点评</h2>   -->
  <% end %>
</div>
