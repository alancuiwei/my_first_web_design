<%= stylesheet_link_tag "style.css" %>
<div class="slider2">
<div class="slice12">
  <h2>用户登录</h2>
</div>
</div>
<div class="clr"></div>
<div class="body">
  <div class="body_resize1">
  </br>
		<% if flash[:alert] %>
		<p id="notice"><%= flash[:alert] %></p>
		<% end %>
		<%= form_tag do %>
			  <div id="form_wrapper" class="form_wrapper">
					<form class="login active">
						<h3>登录</h3>
						<div class="column">
							<div>
								<label>用户名:</label>
				<%= text_field_tag :name, params[:name],:class =>"name-input" %>
			  </div>
			  <div>
								<label>密码:</label>
				<%= password_field_tag :password, params[:password],:class =>"passwd-input" %>
			  </div>
						</div>
						<div class="bottom">
							<div class="remember"><input type="checkbox" /><span>记住我</span></div>
			  <div>
				<%= submit_tag "登录" %>
			  </div>
							<a><%= link_to "您还没有账号？请点击注册", :controller=>"webusers",:action=>"new"%></a>
							<div class="clear"></div>
						</div>
					</form>
				</div> 
		<% end %>
	<div class="clr"></div>
  <div class="clr"></div>
</div>