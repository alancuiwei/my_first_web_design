  }
  function tm_submit(){
      if($("#tm_submit_text").attr("value")!=null&&$("#tm_submit_text").attr("value")!="") {
      $.get("/usermanagement/trademarginfast/",{tardemargin:$("#tm_submit_text").attr("value")},function(data,status){
