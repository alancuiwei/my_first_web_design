<div id="fast_modification"> 
<a href="#fastedit" class="login-window"  style="color: red">快捷修改</a>
</div>
    <table cellpadding="0" cellspacing="0" border="0" class="display" id="datatables">

      <tbody>
            <% @usercommodity.each do |usercommodity_t| %>
                  <tr>
					<td class="center"><%= @hash_commodityid[usercommodity_t.commodityid]  %></td>
					<td class="center"><%= usercommodity_t.commodityid %></td>
  				    <td class="center"><%= @hash_tradechargetype[usercommodity_t.tradechargetype]  %></td>
        <td class = "center" id=b<%= usercommodity_t.id %>><%=  format( "%.0f",@hash_exchtrademargin[usercommodity_t.commodityid]*100)  %>%</td>
                    <% if  (usercommodity_t.tradecharge-usercommodity_t.tradecharge.to_i)==0%>
            <td class="center" id=a<%= usercommodity_t.id %>><%= format( "%.0f",usercommodity_t.tradecharge) %></td>
                        <% else %>
            <td class="center" id=a<%= usercommodity_t.id %>><%= format( "%.6f", usercommodity_t.tradecharge) %></td>
                        <% end %>
        <script type="text/javascript">
          var tc=new Array(),tm=new Array();
          <% @usercommodity.each do |usercommodity_t| %>
          tm[<%=usercommodity_t.id %>]=<%=  format( "%.0f",@hash_exchtrademargin[usercommodity_t.commodityid]*100)  %>;
          <% if  (usercommodity_t.tradecharge-usercommodity_t.tradecharge.to_i)==0%>
                      tc[<%=usercommodity_t.id %>]=<%= format( "%.0f",usercommodity_t.tradecharge) %>
                  <% else %>
                     tc[<%=usercommodity_t.id %>]=<%= format( "%.6f", usercommodity_t.tradecharge) %>
                  <% end %>
          <% end %>
        </script>
        <td class="center" ><a id=c1<%= usercommodity_t.id %> href="javascript:void(0)" onclick='$("#b<%= usercommodity_t.id %>").html("<input id=bb<%= usercommodity_t.id %> type=text value="+tm[<%=usercommodity_t.id %>]+" size=5 />%");
                $("#a<%= usercommodity_t.id %>").html("<input id=aa<%= usercommodity_t.id %> type=text value="+tc[<%=usercommodity_t.id %>]+" size=5/>");
                $("#c1<%= usercommodity_t.id %>").hide();$("#c2<%= usercommodity_t.id %>").show()'>修改</a>
          <a id=c2<%= usercommodity_t.id %> style="display: none;color: red" href=javascript:void(0) onclick=tcpost(<%= usercommodity_t.id %>)>完成</a>
        </td>

                  </tr>
                <% end %>
      </tbody>
    </table>
<script type="text/javascript">
  function tcpost(a){
      $.get("/usercommodity_ts/edittc/"+a,{tradecharge_p:$("#aa"+a.toString()).attr("value"),id:a},function(data1,status){
          $("#a"+a).html(data1);
          tc[a]=data1;
          $("#c1"+a).show();
          $("#c2"+a).hide();
      });
      $.get("/usercommodity_ts/edittm/"+a,{trademargingap_p:$("#bb"+a.toString()).attr("value"),id:a},function(data2,status){
          $("#b"+a).html(data2+"%");
          tm[a]=data2;
          $("#c1"+a).show();
          $("#c2"+a).hide();
      });
      //$.get("/usercommodity_ts/edittc",{tradecharge_p:"gettime"});
     //alert($("#bb"+a.toString()).attr("value")+$("#aa"+a.toString()).attr("value"))
  }
</script>

