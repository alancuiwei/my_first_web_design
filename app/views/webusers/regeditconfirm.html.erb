<%= javascript_include_tag "jQuery.validity.min.js" %>
<%= stylesheet_link_tag "jquery.validity.css" %>

<%= render "side" %>
<div class="centerrightframe">
<h2>注册邮箱确认</h2>
<p>   邮件已经发送到您的邮箱：<%=params[:regedit_email]%>，<a href="<%= @fp_url %>">前往邮箱确认注册</a>！</p>
</div>
<script type="text/javascript">

    $.get("/webusers/regeditconfirm/1",
            { regedit_password:'<%= params[:regedit_password]%>',regedit_name:'<%= params[:regedit_name]%>',
                regedit_email:'<%= params[:regedit_email]%>',regedit_flag:1});

    $(function() {
         $("form").validity(function() {
             $("#my_email")
                 .match("email")
                 .require();
         });
     });
        function fp_url(){
            window.open('<%= @fp_url %>')
        }
</script>