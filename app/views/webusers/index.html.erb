<%= stylesheet_link_tag "datatables.css" %>
<%= javascript_include_tag "jquery.dataTables.min.js" %>
<%= render "side" %>
<script>
    $(document).ready(function() {
        $('#admin_op').dataTable( {
            "aaSorting": [[0,"desc"]]
        } );
    } );
</script>
  <div class="centerrightframe">
  <h2>用户管理</h2>

<table class="display" id="admin_op">
  <thead>
  <tr>
    <th>用户名</th>
    <th>电子邮箱</th>
    <th>用户权限</th>
    <th>注册时间</th>
    <th>权限修改</th>
    <th>查看用户</th>
    <th>编辑用户</th>
    <th>删除用户</th>
  </tr>
  </thead>
  <tbody>
<% @webusers.each do |webuser| %>
  <tr>
    <td><%= webuser.name %></td>
    <td><%= webuser.email %></td>
    <td><%= @hash_level[webuser.level] %></td>
    <td><%= Time.at(webuser.created_at.to_i).to_s(:db) %></td>
    <td><%= link_to "权限修改",:action=>"leveledit",:id=>webuser.id %></td>
    <td><%= link_to "查看", webuser %></td>
    <td><%= link_to "编辑", edit_webuser_path(webuser) %></td>
    <td><%= button_to "删除", webuser, :method=> :delete %></td>
	</tr>
<% end %>
  </tbody>
</table>

<br />

<%= link_to "添加新用户", new_webuser_path %>


  </div>



