<%= render "side" %>
<% if @webuser!=nil %>
<div class="centerframe">

    <% if params[:id]!=nil %>

      <h2><%= @strategyweb.name%>策略测试：</h2>
<form id="s3_form">
          <div class="strategy_config_commodity">
          <h3>策略品种：</h3>
          <% if @strategyweb.strategyid.slice(0,2)=="04" %>
                <%= check_box_tag 'commoditynames[]',@rightids_arr_d[0],:checked=>true%><%= @rightids_arr_d[0] %>
