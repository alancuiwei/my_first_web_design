<% if params[:id]!=nil %>
<%= @strategyweb.name %>
策略优化
<form id="op">
  <select  id="opmed" name="opmed">
    <option value="0">默认算法（模拟退火算法1）</option>
    <option value="1">登山算法1</option>
    <option value="2">登山算法2</option>
