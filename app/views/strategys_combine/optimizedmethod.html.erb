<%= render "side" %>
<div class="strategy_config_selecting">
  <h3>选择策略</h3>
  <form id="form1" runat="server">
    <div>
      <% if params[:id]==nil %>
        <input id="keyword1" value="点击我 选择策略" onclick="this.value=''" onmousemove="$('#keyword1').focus();"/>
