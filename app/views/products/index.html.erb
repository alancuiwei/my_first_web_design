                yAxis:{
                   min:300000
                },
                series : [{
                    name : '净值',
                    data : data,
                    marker : {
                        enabled : true,
                        radius : 3
                    },
                    shadow : true,
                    tooltip : {
                        valueDecimals : 2
                    }
                }]
            });
        });
    });
          var pie=[];
