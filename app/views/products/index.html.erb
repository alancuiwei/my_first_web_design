    });

    $(function() {
        $.getJSON('/products/precordajax/<%=params[:id]%>', function(data) {
        // Create the chart
            window.chart = new Highcharts.StockChart({
                chart : {
                    renderTo : 'container',
                    width: 300,
                    height: 370,
                    zoomType : "x" //可沿x轴拉伸查看
                },

                rangeSelector : {
                    enabled : false
                },

                title : {
                    text : '<%= @product.pname%>基金净值曲线图'
