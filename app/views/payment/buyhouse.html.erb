<%= stylesheet_link_tag "payment.css" %>
<%= javascript_include_tag "bootstrap.min.js" %>

<div class="main-body">
  <div id="page-content">
    <h1>录像帮助</h1>
    <div class="tablet">
      <div class="row-fluid">
        <div class="span7">
          <h2>服务视频介绍</h2>
          <div id="shipin"><iframe frameborder=0 height=360 width=600 src="http://v.qq.com/iframe/player.html?vid=i0124r7uycd&auto=0&tiny=0" allowfullscreen></iframe></div>
        </div>
        <div class="span4 offset1">
          <% if (session[:webusername]!=nil && @webuser!=nil && @webuser.ischarge!=1) || session[:webusername]==nil %>
              <div class="pricing-tiers bs-docs-sidenav affix-top">
                <ul class="pricing-list tiers">
                  <li class="list-heading dark">
                    <h2 class="plan-title">家庭理财规划服务</h2>
                    <p class="plan-name">50元</p>
                  </li>
                  <li>家庭财务分析报告</li>
                  <li>确定理财目标</li>
                  <li>理财风险度评估</li>
                  <li>家庭应急基金准备</li>
                  <li>高收益、稳健收益资产配置</li>
                  <li>每月工资投资指导</li>
                  <li>当前理财产品分析</li>
                  <li>微信实时查询家庭资产</li>
                </ul>
                <table id="payment">
                  <tr>
                    <td rolspan="2">
                      <a class="res" href="javascript:void(0)" id="submit"><img style="width: 150px;" src="/assets/zhifubao.jpg"></a>
                    </td>
                    <td>满意后付款<br><a class="various fancybox.iframe" href="#myModal" role="button" data-toggle="modal">付款流程视频</a></td>
                  </tr>
                </table>
                <br>
                <p style="text-align: center;"><a id="buy" class="btn btn-primary btn-large" href="javascript:void(0)">购 买 理 财 规 划</a></p>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="myModal" class="modal hide fade" z-index=2 tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3>付款流程视频</h3>
  </div>
  <div class="modal-body">
    <iframe frameborder=0 height=360 width=640 src="http://v.qq.com/iframe/player.html?vid=v0123z5sild&auto=0&tiny=0" allowfullscreen></iframe>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true" id="backdrop">关闭</button>
  </div>
</div>

<script>
    $("#backdrop,.modal-backdrop,.close").click(function(){
        $("#shipin").removeClass("hide");
    });
    $(".various").click(function(){
        $("#shipin").addClass("hide");
    });
    $("#submit,#buy").click(function(){
        <% if session[:webusername]!=nil %>
        $.get("/payment/zhifubao",{username:'<%= session[:webusername] %>',scharge:50},function(data){
            location.href=data;
        });
        <% else %>
        location.href="/usermanagement/login?buyhouse=1";
        <% end %>
    });

    !function ($) {
        $(function(){
            var $window = $(window)
            // side bar
            setTimeout(function () {
                $('.bs-docs-sidenav').affix({
                    offset: {
                        top: function () { return $window.width() <= 980 ? 290 : 210 }
                        , bottom: 270
                    }
                })
            }, 100)
        })
    }(window.jQuery)
</script>