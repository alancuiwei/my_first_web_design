<%= stylesheet_link_tag "blog.css" %>

<div  class='main-content'>
  <table class="body-container" cellpadding="0" cellspacing="0">
    <tr>
      <td class="content">
        <h1>博客</h1>
        <table class="content-table" id="blog">
          <tbody>
          <% @blogs.each do |b| %>
          <tr>
            <td class="left-cell">

            </td>
            <td class="post-cell">
              <h2 class="entry-title a"><a href=""><%= b.btitle%></a></h2>
              <div class="eday"><a href="" class="a"><%= b.blname%></a>发表于<a href="" class="a"><%= b.publishdate%></a></div>
              <table>
                <tr>
                  <td>
                    <img src="/assets/<%= b.imagepath%>" />
                  </td>
                  <td>
                    <p><%= b.barticle%></p>
                  </td>
                </tr>
              </table>
              <p><a href="" class="more-link b">详细内容<span class="meta-nav">»</span></a></p>
              <div class="entry-utility">
                    <span class="cat-links">
                      发表于<a href=""  class="a"><%= b.bcolumn%></a>栏目
                    </span>
              </div>
            </td>
          </tr>
              <tr>
                <td colspan="2"><p style="border-bottom: 2px solid #000000;width: 100%;"></p></td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </td>
      <td class="side-tip">

      </td>
    </tr>
  </table>
</div>