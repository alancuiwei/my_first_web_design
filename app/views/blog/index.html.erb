<%= stylesheet_link_tag "blog.css" %>

<div  class='main-content'>
  <table class="body-container" cellpadding="0" cellspacing="0">
    <tr>
      <td class="content">
        <h1>博客</h1>
        <table class="content-table" id="blog">
          <tbody>
          <% @blogs.each do |b| %>
          <tr>
            <td class="left-cell">
              <p class="sociable">分享这篇博客</p>
              <div class="addthis">
                <a href="#" title="SINA weibo" class="at300b"><span class=" at300bs twitter"><span class="at_a11y">SINA weibo</span></span></a>
                <a href="#" title="腾讯 weibo" class="at300b"><span class=" at300bs facebook"><span class="at_a11y">腾讯 weibo</span></span></a>
                <a href="#" title="邮件" class="at300a"><span class=" at300bs email"><span class="at_a11y">邮件</span></span></a>
                <a href="#" title="打印" class="at300b"><span class=" at300bs print"><span class="at_a11y">打印</span></span></a>
                <a href="#" class="at300a"><span class=" at300bs compact"><span class="at_a11y">更多</span></span></a>
              </div>
            </td>
            <td class="post-cell">
              <h2 class="entry-title a"><a href="/blog/blogarticle/<%= b.id%>"><%= b.btitle%></a></h2>
              <div class="eday"><a href="" class="a"><%= b.blname%></a>发表于<a href="" class="a"><%= b.publishdate%></a></div>
              <div class="entry-content">
                <p><img class="alignleft size-medium "  src="/assets/<%= b.imagepath%>" width="200px"><%= b.barticle%></p>
              </div>
              <p><a href="/blog/blogarticle/<%= b.id%>" class="more-link">详细内容<span class="meta-nav">»</span></a></p>
              <div class="entry-utility">
                    <span class="cat-links">
                      发表于<a href=""  class="a"><%= b.bcolumn%></a>栏目
                    </span>
              </div>
            </td>
          </tr>
              <tr>
                <td colspan="2"><p style="border-bottom: 3px solid #000000;width: 100%;margin: 30px 0;"></p></td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </td>
      <td class="side-tip">
        <div class="tip">
          <li  class="widget-container">
            <h3>目录</h3>
            <ul>
              <li>
                <a href="/blog/index" class="a">博客</a>
                <ul>
                  <li><a href="/blog/blogbankfinance" class="a">银行理财产品</a></li>
                  <li><a href="/blog/blogbusinesslife" class="a">创业人生</a></li>
                </ul>
              </li>
            </ul>
          </li>
        </div>
      </td>
    </tr>
  </table>
</div>