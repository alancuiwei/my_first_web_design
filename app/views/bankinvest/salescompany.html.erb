<%= stylesheet_link_tag "bankinvest.css" %>
<style>
    .details td.right{
        font-family: "Open Sans",Helvetica,Arial,sans-serif;
        margin: 0;
        font-style: italic;
        font-size: 14px;
        line-height: 24px;
        color: rgb(68, 68, 68);
    }
    .details td.left{
        width:15%;
        vertical-align: middle;
        background-color: #fbfbfb;
        font-weight: normal;
        font-size: 17px;
        line-height: 17px;
        text-align: left;
        padding-left: 10px;
        font-family: "helvetica neue",helvetica,arial,sans-serif;
        font-weight: 600;
        color: rgb(51, 51, 51);
    }

    .box_left_title1 {
        font-size: 20px;
        padding-bottom: 10px;
        margin-bottom: 10px;
    }

</style>

<div class="main-content details">
  <div style="width: 60%;min-width: 692px;">
    <a href="/">首页</a>
    <br><br>
    <div class="box_left_title1">
      <span style="line-height: 35px;"><%= @salescompany.fundname %></span><br>
      <span style="font-size: 12px;">2012年四月 国家颁发 基金销售业务资格证书</span>
    </div>
    <br>
    <table class="table table-striped table-bordered">
      <tr>
        <td class="left">公司名称</td>
        <td class="right"><%= @salescompany.company %></td>
      </tr>
      <tr>
        <td class="left">注册资本</td>
        <td class="right"><%= @salescompany.capital %></td>
      </tr>
      <tr>
        <td class="left">公司简介</td>
        <td class="right"><%= @salescompany.profile %></td>
      </tr>
      <tr>
        <td class="left">官网介绍</td>
        <td class="right"><% if @salescompany.introduced!=nil %><a href="<%= @salescompany.introduced %>" target="_blank">点击查看</a><% end %></td>
      </tr>
    </table>
  </div>
</div>