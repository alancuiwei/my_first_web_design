<script language="javascript" type="text/javascript">
    $("#checkinput").click(function(e){
        var numfor=/^[-+]?[0-9]+(\.[0-9]+)?$/;
        if($("#amount").attr("value")=="")
        {
            alert("请输入投资金额!");
            return false;
        }
        else if(numfor.test($("#amount").attr("value"))==false)
        {
            alert("请输入数字!");
            return false;
        }
        else if($("#amount").attr("value")<50000)
        {
            alert("最小投资金额为5万!");
            return false;
        }
        else{
            location.href="/bankinvest/secondpickout?amount="+$("#amount").attr("value");
        }
    });
</script>