          <td>理财资产托管人</td>
          <td><%= @bankproducts.assetscustodian%></td>
        </tr>
        <tr>
          <td>产品费用</td>
          <td><%= @bankproducts.productcost%></td>
        </tr>
        <tr>
          <td>质押</td>
          <td><%= @bankproducts.pledge%></td>
        </tr>
        <tr>
          <td>税款</td>
          <td><%= @bankproducts.tax%></td>
        </tr>
        <tr>
          <td>其他</td>
          <td></td>
        </tr>
