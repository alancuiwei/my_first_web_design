<div class="main-content">
  <a href="/">首页</a>
  <% if session[:webusername]!=nil && @webuser.organuser=='1' %>
  <h1><%= @webuser.company %>&nbsp;<%= @webuser.division %>&nbsp;<%= @webuser.name %>&nbsp;管理页面</h1>
      <table cellpadding="0" cellspacing="0" border="0" class="display" id="organ">
        <thead><tr>
          <th>发行机构</th><th>产品名称</th><th>年化收益率</th>
          <th>是否保本</th><th>起售价</th><th>理财期限</th>
          <th>起购日期</th><th>结束日期</th><th>更多</th>
        </tr></thead>
      </table>
  <% end %>
</div>

