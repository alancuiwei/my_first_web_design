<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
<%= javascript_include_tag :defaults %>
<%= stylesheet_link_tag "style.css" %>
<%= javascript_include_tag "jquery.js" %>
<script type="text/javascript" charset="utf-8">
