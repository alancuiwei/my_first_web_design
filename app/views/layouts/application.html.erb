</head>

<body>
<div class="main">
  <div class="header">
    <div class="block_header">
          <div class="logoimage">
          <%= link_to(image_tag("logo.gif"),:controller=>"home",:action=>"index") %>
          </div>

          <% if session[:webuser_name]==nil then%>
          <div class="register">
          <%= link_to "注册", :controller=>"webusers",:action=>"new" %>
          </div>

          <div class="login">
          <%= link_to " 登录", :controller=>"sessions",:action=>"new" %>
          </div>
          <% else %>
          <div class="welcomeuser"><p>
          您好，<%= session[:webuser_name] %>，我们为您准备的策略推荐，<%= link_to "(不是 " + session[:webuser_name] +"?)", logout_path %>
          </p></div>
		  <% if session[:webuser_name]=="feifan" then%>
          <div class="login">
          <%= link_to "管理员入口", :controller=>"admin",:action=>"index" %>
          </div>
		  <% else %>
		  <div class="login">
          <%= link_to "用户设置", :controller=>"usermanagement",:action=>"index" %>
          </div>
		  <% end %>
	  <% end %>

      <div class="clr"></div>
      <div class="menu">
        <ul>
		  <li><%= link_to "首页", :controller=>"home", :action=>"index" %></li>
  		  <li><%= link_to "无风险套利",:controller => "strategy",:action =>"show",:id =>"1" %></li>
          <li><%= link_to "个性化交易",:controller => "home",:action => "comingsoon" %></li>
          <li><%= link_to "自动化交易",:controller => "home",:action => "comingsoon" %></li>
          <li><%= link_to "关于我们",:controller => "contactus",:action => "intro" %></li>
        </ul>
      </div>
      <div class="clr"></div>
    </div>
  </div>

<%= yield %>
</div>
