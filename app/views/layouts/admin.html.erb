      <script type="text/javascript">
          var clickflag ;
      $(document).ready(function() {
          $('a.login-window,a.regedit-window').click(function () {

         		// Getting the variable's value from a link
         		var loginBox = $(this).attr('href');
                if (loginBox=="#login-box")
                clickflag="login" ;
              else
                    clickflag="regedit";
         		//Fade in the Popup and add close button
         		$(loginBox).fadeIn(300);

         		//Set the center alignment padding + border
         		var popMargTop = ($(loginBox).height() + 24) / 2;
         		var popMargLeft = ($(loginBox).width() + 24) / 2;

         		$(loginBox).css({
         			'margin-top' : -popMargTop,
         			'margin-left' : -popMargLeft
         		});

         		// Add the mask to body
         		$('body').append('<div id="mask"></div>');
         		$('#mask').fadeIn(300);

         		return false;
         	});

         	// When clicking on the button close or the mask layer the popup closed
         	$('a.close, #mask').live('click', function() {
         	  $('#mask , .login-popup').fadeOut(300 , function() {
         		$('#mask').remove();
         	});
         	return false;
         	});
         //
      });
      function login(){
          $.get("/home/index", { name:$("#name").attr("value"),password:$("#password").attr("value")}, function (data,status){
          if(data==$("#name").attr("value")) {
             	  $('#mask , .login-popup').fadeOut(300 , function() {
             		$('#mask').remove();
             	});
              $(".login").hide();
              $(".register").hide();
              $(".welcomeuser").show()
              $(".welcomeuser").html('<p style=color:#FF9933;>您好,'+data+'!(不是<a href="javascript:void(0)" onclick="logout()">'+data+'</a>'+'?)</p>');
          }
              else{
          $("#errormsg").html(data) }
          });
      }

      function logout(){
          $.get("/home/index", { logout:"logout"}, function (data,status){
          if(data=="logout") {
              $(".welcomeuser").hide();
              $(".login").show();
              $(".register").show();
           }
          });
      }
      function logout_s(){
          $.get("/home/index", { logout:"logout"}, function (data,status){
          if(data=="logout") {
              $(".welcomeuser").hide();
              $(".login").show();
              $(".register").show();
           }
          });
      }

      function regedit(){
          $.get("/home/index", { regedit_name:$("#regedit_name").attr("value"),regedit_email:$("#regedit_email").attr("value"),
              regedit_password:$("#regedit_password").attr("value"),regedit_password_confirmation:$("#regedit_password_confirmation").attr("value")}, function (data,status){
          if(data==$("#regedit_name").attr("value")) {
             	  $('#mask , .login-popup').fadeOut(300 , function() {
