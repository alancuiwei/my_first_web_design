<%= stylesheet_link_tag "p1_usersurvey.css" %>

<style>
    #result td,#result th{
        width: 20%;
    }
</style>

<div class="welcomes">
  <%= render "side" %>
  <div id="page-content">
    <h1>投资结果预测
      <a class="btn btn-primary btn-large pull-right" style="margin-bottom: 10px;" href="/userfinanceplan/p4_user_finance_plan_report">下一步：理财目标实现</a>
    </h1>
    <div class="tablet">
      <h2><span>1</span>近一年月投资计划：</h2>
      <table id="result" class="table table-striped table-bordered">
        <thead>
        <tr>
          <th></th>
          <th>流动性资金投入</th>
          <th>风险性资金投入</th>
          <th>稳健性资金投入</th>
          <th>总投入</th>
        </tr>
        </thead>
        <% for i in 0..@userplanmonth.size-1 %>
            <tr>
              <td><%= @userplanmonth[i].date %></td>
              <td><%= @hash2[i][0] %></td>
              <td><%= @userplanmonth[i].risky_account %></td>
              <td><%= @userplanmonth[i].safety_account %></td>
              <td><%= @hash2[i][0]+@userplanmonth[i].risky_account+@userplanmonth[i].safety_account %></td>
            </tr>
        <% end %>
        <tr>
          <td>全年</td>
          <td><%= @totalhuobi %></td>
          <td><%= @totalrisky %></td>
          <td><%= @totalsafety %></td>
          <td><%= @total %></td>
        </tr>
      </table>
      <h2><span>2</span>15年家庭资产增值预估：</h2>
      <table class="table table-striped table-bordered">
        <thead>
        <tr>
          <th style="width: 50%;">日期</th>
          <th>您的家庭资产</th>
        </tr>
        </thead>
        <% for i in 0..14 %>
            <tr>
              <td><%= @date.to_i+i+1 %></td>
              <td><%= @asset_account*(i+1) %></td>
            </tr>
        <% end %>
      </table>
    </div>
    <h1></h1>
    <a class="btn btn-primary btn-large pull-right" style="margin-right: 20px;" href="/userfinanceplan/p4_user_finance_plan_report">下一步：理财目标实现</a>
  </div>
</div>